//OBJETOS

const persona = {
  nombre: "Juan",
  apellido: "Perez",
  edad: 40,
  ojosColor: "azul",
};

//Acceder a propiedades

// objeto.propiedad
// objeto["propiedad"]

persona.nombre;
persona["apellido"];

